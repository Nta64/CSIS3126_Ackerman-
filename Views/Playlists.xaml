<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Audio.Playlists">

    <ContentPage.Content>
        <StackLayout x:Name="Playlist">


            <ListView x:Name="PlaylistView" ItemTapped="TapTo">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                            <Label Text="{Binding}"/>
                        </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>


            <Button x:Name= "create"
                FontSize="30"
                   Text="+"
            CornerRadius="28"
            WidthRequest="60"
            HeightRequest="60"        
            VerticalOptions="Start"
            HorizontalOptions="End"
            Visual="Material" 
            Clicked="CreatePlaylist"/>


        </StackLayout>
        
        
        
       
        
        
    </ContentPage.Content>
</ContentPage>