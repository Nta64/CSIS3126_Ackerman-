<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Audio.MainPage">

    <StackLayout>
        <Label />
        <Label />
        <Label x:Name="MainLogo" Text="Audio" FontSize ="32" HorizontalTextAlignment="Center" />

        <Label />
        <Label />
        <Label />
        <Label />

        <Label  Text=" Username" FontSize ="18"/>

        <Entry x:Name ="userName" />

        <Label />
        <Label />

        <Label  Text=" Password" FontSize ="18"/>

        <Entry x:Name="password" IsPassword ="True"/>
        <Label x:Name ="FP" Text=" Forgot Password?" FontSize ="14"/>

        <Label />
        <Label />
        <Label />

        <Button x:Name="register" Text="Register" Clicked="HandleRegisterAttempt" IsVisible="False"/>
        <Button x:Name="login" Text="Login" Clicked="HandleLoginAttempt" />
        <Button x:Name="cancel" Text="Cancel" Clicked="ResetPage" IsVisible="False"/>
        <Label />

        <Label x:Name="SU" Text="Sign Up" FontSize ="14" HorizontalTextAlignment="Center" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer
                   Tapped="RegisterUser"/>
            </Label.GestureRecognizers>
        </Label>


    </StackLayout>

</ContentPage>
