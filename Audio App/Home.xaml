<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioApplication.Home">

    <!-- Main menu buttons -->
    <ContentPage.Content>
        <StackLayout>
            
            <Button x:Name="Browse" Clicked="NavBrowse" Text="Browse"> </Button>

            <Button x:Name="YourPlaylists" Clicked="NavYourPlaylists" Text="Your Playlists"></Button>

            <Button x:Name="FAQ" Clicked="NavFAQ" Text="FAQ"></Button>

            <Button x:Name="Logout" Clicked="NavLogout" Text="Logout" ></Button>
      
        </StackLayout>
    </ContentPage.Content>
</ContentPage>